<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_distance"
        android:inputType="numberDecimal"
        android:layout_marginTop="100dp"
        android:hint="@string/Distancia"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <TextView
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="Total De Quilometros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/preco"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:hint="@string/Preço"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <TextView
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="Preço por litro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/autonomia"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:hint="@string/Autonomia"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <TextView
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="KM por litro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="SEU GASTO TOTAL SERÁ DE:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/custo"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:text="R$ 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calcular"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        android:stateListAnimator="@null"
        android:elevation="35dp"
        android:text="CALCULAR"
        tools:ignore="MissingClass" />

</LinearLayout>
